@model SC701_JN_Practica02.Models.VendedorModel

@{
    ViewData["Title"] = "Registro de Vendedores";
}

<!-- Práctica 2: Formulario para registrar vendedores (mantiene estilo de plantilla) -->
<div class="row">
    <div class="col-md-8 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Registro de Vendedores</h4>

                <form asp-action="Create" method="post" class="forms-sample">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                    <div class="form-group">
                        <label asp-for="Cedula" class="form-label"></label>
                        <input asp-for="Cedula" class="form-control" />
                        <span asp-validation-for="Cedula" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Nombre" class="form-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Correo" class="form-label"></label>
                        <input asp-for="Correo" class="form-control" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary me-2">Registrar Vendedor</button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-light">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />