@model SC701_JN_Practica02.Models.VehiculoModel
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Registro de Vehículos";
}

<!-- Práctica 2: Formulario para registrar vehículos (mantiene estilo de plantilla) -->
<div class="row">
    <div class="col-md-8 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Registro de Vehículos</h4>

                <form asp-action="Create" method="post" class="forms-sample">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                    <div class="form-group">
                        <label asp-for="Marca" class="form-label"></label>
                        <input asp-for="Marca" class="form-control" />
                        <span asp-validation-for="Marca" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Modelo" class="form-label"></label>
                        <input asp-for="Modelo" class="form-control" />
                        <span asp-validation-for="Modelo" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Color" class="form-label"></label>
                        <input asp-for="Color" class="form-control" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Precio" class="form-label"></label>
                        <input asp-for="Precio" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="Precio" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="VendedorCedula" class="form-label">Vendedor</label>
                        <select asp-for="VendedorCedula" asp-items="(SelectList)ViewBag.Vendedores" class="form-select">
                            <option value="">-- Seleccione vendedor --</option>
                        </select>
                        <span asp-validation-for="VendedorCedula" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary me-2">Registrar Vehículo</button>
                    <a asp-controller="Vehiculo" asp-action="Index" class="btn btn-light">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />